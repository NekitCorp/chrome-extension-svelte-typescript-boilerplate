{
    "name": "chrome-extension-boilerplate",
    "description": "Boilerplate for Chrome Extension Svelte Typescript project",
    "version": "1.0",
    "manifest_version": 3,
    "icons": {
        "16": "assets/icons/get_started16.png",
        "32": "assets/icons/get_started32.png",
        "48": "assets/icons/get_started48.png",
        "128": "assets/icons/get_started128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://*/*"],
            "js": ["content/index.ts"],
            "css": ["content/styles.css"]
        }
    ],
    "background": {
        "service_worker": "background.ts"
    },
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": false
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "assets/icons/get_started16.png",
            "32": "assets/icons/get_started32.png",
            "48": "assets/icons/get_started48.png",
            "128": "assets/icons/get_started128.png"
        }
    },
    "permissions": ["storage"]
}
